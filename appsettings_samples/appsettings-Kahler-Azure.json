        "HostController": "Levridge.Integration.Host.DefaultController"
    },
    "Logging": {
        "Debug": {
            "LogLevel": {
                "Default": "Information"
            }
        },
        "Console": {
            "IncludeScopes": true,
            "LogLevel": {
                "Default": "Information"
            }
        },
        "LogLevel": {
            "Default": "Information"
        }
    },
    "AllowedHosts": "*",
    "InstanceConfig": {
        "AzureTableConfiguration": "AzureTableConfiguration",
